{
  "name": "quack-jump",
  "version": "1.0.0",
  "description": "ðŸ¦† Quack Jump! - Wallchain Mini Game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "game",
    "quack",
    "wallchain"
  ],
  "author": "Wallchain Community",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.wallchain.quackjump",
    "productName": "Quack Jump",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "game.js",
      "style.css",
      "assets/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/logo"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/logo",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/logo",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

